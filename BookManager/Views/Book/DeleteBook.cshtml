@model BookManager.Models.Book

@{
    ViewBag.Title = "DeleteBook";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>DeleteBook</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Book</h4>
    <hr />
    <dl class="dl-horizontal">
    </dl>

    @using (Html.BeginForm())
    {
       
                <td>
                    Author;
                </td>
                <td>
                    @Html.TextBoxFor(model => model.Author, new { @class = "form-control", placeholder = "Author" })
                </td>
            
            
                <td>
                    Title;
                </td>
                <td>
                    @Html.TextBoxFor(model => model.Title, new { @class = "form-control", placeholder = "Title" })
                </td>
            
            
                <td>
                    Description;
                </td>
                <td>
                    @Html.TextBoxFor(model => model.Description, new { @class = "form-control", placeholder = "Description" })
                </td>
            
           
                <td>
                    Image Cover;
                </td>
                <td>
                    <img src="~/Content/Images/book1cover.png"width="100px"height="200px" />
                </td>
            
            
                <td>
                    Gia;
                </td>
                <td>
                    @Html.TextBoxFor(model => model.Price, new { @class = "form-control", placeholder = "Gia" })
                </td>
           
            <tr style="text-align:center; padding-top:20px">
                <td colspan="2">
                    <input type="submit" value="Delete Book" class="btn btn-" />
                </td>
            </tr>
    }
</div>
